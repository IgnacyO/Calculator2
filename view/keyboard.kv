<FunctionalKey>:
    theme_bg_color: "Custom"
    md_bg_color: self.bg_color


<Key>:
    style: "outlined"
    theme_width: "Custom"
    size_hint_x: 1
    size_hint_y: 1


<KeyIcon>:
    MDButtonIcon:
        icon: root.display_icon
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        theme_text_color: "Custom"
        text_color: root.primary_color
        theme_font_size: "Custom"
        font_size: "20sp"


<KeyText>:
    MDButtonText:
        text: root.display_text
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        theme_text_color: "Custom"
        text_color: root.primary_color
        theme_font_size: "Custom"
        font_size: "20sp"


<Keyboard>:
    cols: 4
    rows: 6
    spacing: "20dp"
    padding: "20dp"
    size_hint: 1, 1
    adaptive_size: False

    ExponentKey:

    EulerExponentKey:

    ClearAllKey:

    BackspaceKey:

    SineKey:

    CosineKey:

    EraseKey:

    DivisionKey:

    NumericKey:
        numeric_val: "7"

    NumericKey:
        numeric_val: "8"

    NumericKey:
        numeric_val: "9"

    MultiplicationKey:

    NumericKey:
        numeric_val: "4"

    NumericKey:
        numeric_val: "5"

    NumericKey:
        numeric_val: "6"

    SubstractionKey:

    NumericKey:
        numeric_val: "1"

    NumericKey:
        numeric_val: "2"

    NumericKey:
        numeric_val: "3"

    AdditionKey:

    SignKey:

    NumericKey:
        numeric_val: "0"

    FloatKey:

    EqualsKey:
        theme_bg_color: "Custom"
        md_bg_color: self.bg_color
        

